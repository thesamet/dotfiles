// -*- mode: jsonc -*-
{
  "reload_style_on_change": true, // Reload style.css on change
  "layer": "bottom", // Waybar at top layer
  "position": "bottom", // Waybar position (top|bottom|left|right)
  // "width": 1280, // Waybar width
  "spacing": 1, // Gaps between modules (4px)
  "height": 0,
  // Choose the order of the modules
  "modules-left": [
    "hyprland/window"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "hyprland/window": {
    "format": "{title}",
    "icon": true,
    "icon-size": 18,
    "max-length": 100
  },
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "warp-on-scroll": false,
    "format": "{icon}",
    "persistent-workspaces": {
      "*": 9
    }
  },
